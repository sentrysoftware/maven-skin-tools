<?xml version="1.0" encoding="UTF-8"?>
<!-- Add custom tools to Velocity tools.
	The tools.xml file is included in the classpath and Velocity finds it. -->
<tools>
	<toolbox scope="application">
		<tool key="htmlTool"
			class="org.sentrysoftware.maven.skin.HtmlTool" />
		<tool key="indexTool"
			class="org.sentrysoftware.maven.skin.IndexTool" />
		<tool key="imageTool"
			class="org.sentrysoftware.maven.skin.ImageTool" />
	</toolbox>
</tools>